<Window Title="Recruiters">
  <Panel>
    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>
      <Grid.RowDefinitions>
        <RowDefinition/>
      </Grid.RowDefinitions>
    
      <GroupBox Title="List" Width="40">
        <Panel Orientation="Vertical" MaxHeight="15">
          <ScrollViewer VerticalAlignment="Stretch">
            <!--<ScrollViewer.HorizontalScrollEnabled>true</ScrollViewer.HorizontalScrollEnabled>-->
            <ListBox Width="35" Name="lstRecruiters" VerticalAlignment="Stretch">
              <ListBox.Items>
              </ListBox.Items>
            </ListBox>
          </ScrollViewer>
        </Panel>
      </GroupBox>
      <GroupBox Title="Recruiter" Name="grpRecruiter" Width="40">
        <Panel Orientation="Vertical" Name="pnlRecruiter">
          <TextBlock Text="Name:" />
          <TextBox Name="txtName" Width="30" Text=""></TextBox>
          <TextBlock Text="E-mail:" />
          <TextBox Name="txtEmail" Width="30" Text=""></TextBox>
          <TextBlock Text="Telephone:" />
          <TextBox Name="txtTelephone" Width="20" Text=""></TextBox>
          <TextBlock Text="Company:" />
          <ComboBox Width="30" Name="cmbCompanies" MaxWidth="30"></ComboBox>
          <Button Name="btnCompanies" Margin="0" Caption="Companies.." HorizontalAlignment="Right"></Button>
          <TextBlock Text="First contact:" />
          <TextBox Name="txtFirstContact" Width="20" Text=""></TextBox>
          <TextBlock Text="Notes:" />
          <TextBox Name="txtNotes" Height="2" Width="30" Text=""></TextBox>
        </Panel>
      </GroupBox>
    </Grid>
    <Button Name="btnSave" Margin="0" Caption="Save" HorizontalAlignment="Center"></Button>
    <Button Name="btnCreate" Margin="0" Caption="Create" HorizontalAlignment="Center"></Button>
  </Panel>
</Window>